{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@workerd/*": ["../bazel-bin/src/workerd/*"],
    },
    "checkJs": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
